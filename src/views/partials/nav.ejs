<nav class="border-b border-gray-200 bg-white shadow-sm">
  <div class="mx-auto max-w-xl px-4">
    <div class="flex h-16 items-center justify-between">
      <h1 class="text-xl font-bold text-gray-900">
        <a href="/" class="transition-colors duration-200 hover:text-blue-600"
          >Members Only</a
        >
      </h1>

      <!-- Desktop Navigation -->
      <% if (locals.currentUser) { %>
      <div class="hidden items-center space-x-4 md:flex">
        <a
          href="/"
          class="text-gray-600 transition-colors duration-200 hover:text-gray-900"
          >Home</a
        >
        <a
          href="/messages/new"
          class="text-gray-600 transition-colors duration-200 hover:text-gray-900"
          >New</a
        >
        <a
          href="/membership"
          class="text-gray-600 transition-colors duration-200 hover:text-gray-900"
          >Membership</a
        >
        <a href="/logout" class="btn-secondary">Logout</a>
      </div>
      <% } else { %>
      <div class="hidden items-center space-x-4 md:flex">
        <a href="/login" class="btn-secondary">Login</a>
        <a
          href="/register"
          class="text-gray-600 transition-colors duration-200 hover:text-gray-900"
          >Register</a
        >
      </div>
      <% } %>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="rounded-lg p-2 hover:bg-gray-100 md:hidden"
        aria-label="Toggle mobile menu"
      >
        <svg
          class="h-6 w-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          ></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden pb-4 md:hidden">
      <% if (locals.currentUser) { %>
      <div class="space-y-2">
        <a
          href="/"
          class="block rounded-lg px-3 py-2 text-gray-600 hover:bg-gray-100 hover:text-gray-900"
          >Home</a
        >
        <a
          href="/messages/new"
          class="block rounded-lg px-3 py-2 text-gray-600 hover:bg-gray-100 hover:text-gray-900"
          >New Message</a
        >
        <a
          href="/membership"
          class="block rounded-lg px-3 py-2 text-gray-600 hover:bg-gray-100 hover:text-gray-900"
          >Membership</a
        >
        <a
          href="/logout"
          class="block rounded-lg px-3 py-2 text-gray-600 hover:bg-gray-100 hover:text-gray-900"
          >Logout</a
        >
      </div>
      <% } else { %>
      <div class="space-y-2">
        <a
          href="/login"
          class="block rounded-lg px-3 py-2 text-gray-600 hover:bg-gray-100 hover:text-gray-900"
          >Login</a
        >
        <a
          href="/register"
          class="block rounded-lg px-3 py-2 text-gray-600 hover:bg-gray-100 hover:text-gray-900"
          >Register</a
        >
      </div>
      <% } %>
    </div>
  </div>

  <script>
    document
      .getElementById("mobile-menu-btn")
      .addEventListener("click", function () {
        const menu = document.getElementById("mobile-menu");
        menu.classList.toggle("hidden");
      });
  </script>
</nav>
