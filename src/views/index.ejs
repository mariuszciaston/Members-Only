<!DOCTYPE html>
<html lang="en" class="h-full">
<%- include('partials/head', { title: 'Home page | Members Only' }) %>

  <body class="h-full flex flex-col">
    <%- include('partials/nav') %>
      <main class="flex-1 max-w-xl mx-auto px-4 py-8 w-full">
        <% const user=locals.currentUser; const msgs=locals.messages || []; const isMember=Boolean(user && user.membership); %>
          <div class="text-center mb-8">
            <% if (user) { %>
              <h1 class="text-3xl font-bold text-gray-900 mb-2">Welcome back, <%= user.fullname %>!</h1>
              <p class="text-gray-600">Share your thoughts with the community</p>
              <% } else { %>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">Welcome to Members Only!</h1>
                <p class="text-gray-600 mb-4">A private clubhouse for exclusive conversations</p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                  <a href="/login" class="btn-primary-blue">Login</a>
                  <a href="/register" class="btn-primary-green">Join Now</a>
                </div>
                <% } %>
          </div>
          <% if (msgs.length> 0) { %>
            <div class="space-y-6">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <h2 class="text-2xl font-semibold text-gray-900">Recent Messages</h2>
                <% if (user) { %>
                  <a href="/messages/new" class="btn-primary-blue ">New Message</a>
                  <% } %>
              </div>
              <div class="space-y-4">
                <% msgs.forEach(message=> {
                  const dateStr = new Date(message.created_at).toLocaleDateString();
                  const username = isMember ? message.username : '█'.repeat(message.username.length);
                  const date = isMember ? dateStr : '█'.repeat(dateStr.length);
                  const status = message.admin ? 'ADMIN' : (message.membership ? 'MEMBER' : 'GUEST');
                  const statusColor = message.admin ? 'bg-violet-100 text-violet-800' : (message.membership ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800');
                  %>
                  <div class="message-card">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-3 gap-2">
                      <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-3">
                        <span class="font-medium text-gray-900 <%= !isMember ? 'blur-xs' : '' %>">
                          <%= username %>
                        </span>
                        <span class="text-sm text-gray-500 <%= !isMember ? 'blur-xs' : '' %>">
                          <%= date %>
                        </span>
                      </div>
                      <div class="flex items-center gap-2">
                        <span class="px-2 py-1 text-xs font-medium rounded-full <%= statusColor %>">
                          <%= status %>
                        </span>
                      </div>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">
                      <%= message.title %>
                    </h3>
                    <p class="text-gray-700 leading-relaxed mb-2">
                      <%= message.text %>
                        <% if (user && user.admin) { %>
                          <form method="POST" action="/messages/delete/<%= message.message_id %>">
                            <button type="submit" class="
                                                        
                            text-red-600 hover:text-red-800 text-sm font-medium cursor-pointer" onclick="return confirm('Are you sure you want to delete this message?')">
                              Delete
                            </button>
                          </form>
                          <% } %>
                    </p>
                  </div>
                  <% }) %>
              </div>
            </div>
            <% } else { %>
              <div class="text-center py-12">
                <div class="max-w-md mx-auto">
                  <h3 class="text-lg font-medium text-gray-900 mb-2">No messages yet</h3>
                  <p class="text-gray-600 mb-4">Be the first to start a conversation!</p>
                  <% if (user) { %>
                    <a href="/messages/new" class="btn-primary-blue">Create First Message</a>
                    <% } %>
                </div>
              </div>
              <% } %>
      </main>
      <%- include('partials/footer') %>
  </body>

</html>